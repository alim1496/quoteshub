<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.appwiz.quoteshub">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
                android:name="com.appwiz.quoteshub.MainActivity"
                android:windowSoftInputMode="adjustPan"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.appwiz.quoteshub.activities.SingleCategory"/>
        <activity android:name="com.appwiz.quoteshub.activities.SingleAuthor"/>
        <activity android:name="com.appwiz.quoteshub.activities.SingleTag"/>
        <activity android:name="com.appwiz.quoteshub.activities.SignIn"/>
    </application>

</manifest>