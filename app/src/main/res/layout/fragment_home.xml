<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.HomeFragment"
>

    <androidx.core.widget.NestedScrollView
            android:id="@+id/home_screen_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ECE8E8"
    >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
        >

            <!-- recent quotes -->
            <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_recent_quote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <include layout="@layout/shimmer_quote_home"/>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <LinearLayout
                    android:id="@+id/recent_quotes_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                <TextView
                        android:id="@+id/recent_quotes_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="20sp"
                />
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                />
                <TextView
                        android:id="@+id/recent_see_all"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="#8AA6EB"
                        android:layout_gravity="end"
                        android:text="@string/see_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- featured quotes -->
            <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_featured_quote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <include layout="@layout/shimmer_quote_home"/>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <LinearLayout
                    android:id="@+id/featured_quotes_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                <TextView
                        android:id="@+id/featured_quotes_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="20sp"
                />


                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/featured_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                />
                <TextView
                        android:id="@+id/featured_see_all"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="#8AA6EB"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="end"
                        android:text="@string/see_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- quote of the day -->
            <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_day_quote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/shimmerColor"
                            android:layout_width="120dp"
                            android:layout_height="30dp"/>
                    <include layout="@layout/shimmer_full_quote"/>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <LinearLayout
                    android:id="@+id/day_quote_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
            >

                <TextView
                        android:id="@+id/quote_day_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="20sp"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                >

                    <TextView
                            android:id="@+id/day_quote_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="16sp"
                    />
                    <TextView
                            android:id="@+id/day_quote_src"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="14sp"
                    />
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/day_tag_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                    />
                    <include layout="@layout/action_buttons"/>
                </LinearLayout>


            </LinearLayout>

            <!-- featured authors -->
            <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_featured_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/shimmerColor"
                            android:layout_width="120dp"
                            android:layout_height="30dp"/>
                    <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <include layout="@layout/shimmer_home_author_single"/>
                            <include layout="@layout/shimmer_home_author_single"/>
                            <include layout="@layout/shimmer_home_author_single"/>
                            <include layout="@layout/shimmer_home_author_single"/>
                            <include layout="@layout/shimmer_home_author_single"/>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <LinearLayout
                    android:id="@+id/featured_authors_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">


                <TextView
                        android:id="@+id/featured_authors_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="20sp"
                />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/authors_recyclerview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:layout_marginStart="10dp"
                />

            </LinearLayout>

            <!-- events today -->
            <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_events_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <include layout="@layout/shimmer_quote_home"/>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <LinearLayout
                    android:id="@+id/today_events_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
            >


                <TextView
                        android:id="@+id/today_events_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="20sp"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical"
                >
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/events_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                    />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include
            layout="@layout/common_error_container"
            android:id="@+id/net_err_holder"
    />
</FrameLayout>