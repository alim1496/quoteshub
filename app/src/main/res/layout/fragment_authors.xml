<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.AuthorsFragment">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/author_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:visibility="visible" />

    <ProgressBar
            android:id="@+id/authors_screen_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    <ProgressBar
            android:id="@+id/btm_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_below="@+id/author_recyclerview"
            />

    <include
            android:id="@+id/auth_net_err"
            layout="@layout/common_error_container" />
</RelativeLayout>