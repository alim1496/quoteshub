<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="20dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Quote Text"
            android:id="@+id/et_quote_text"
            android:background="@drawable/edit_text_design"
            android:padding="10dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:inputType="textMultiLine"
            android:gravity="start"
            android:layout_marginBottom="20dp"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Quote Category"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:id="@+id/et_quote_category"
            android:background="@drawable/edit_text_design"
            android:paddingStart="10dp"
            android:layout_marginBottom="20dp"
            android:inputType="text"
            android:maxLines="1"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Author Name"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:id="@+id/et_quote_source"
            android:background="@drawable/edit_text_design"
            android:paddingStart="10dp"
            android:layout_marginBottom="20dp"
            android:inputType="text"
            android:maxLines="1"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Quote Tags"
            android:id="@+id/et_quote_tags"
            android:background="@drawable/edit_text_design"
            android:paddingStart="10dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="20dp"
            android:inputType="text"
            android:maxLines="1"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_quote_submit"
            android:text="submit"
            android:textAllCaps="true"
            android:background="@drawable/submit_btn_design"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
    />
</LinearLayout>